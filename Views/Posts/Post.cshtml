<div class="image_container">
    <img src="@ViewBag.post.path";>
    <br />
    Tags: @ViewBag.post.tags
    <br />
    Description: @ViewBag.post.description
    <br />
    Posted by: @ViewBag.post.user
    <br />
    @{if(ViewBag.post.user == User.Identity.Name)
    {
        <a href="/posts/edit?id=@ViewBag.post.id">Edit post</a>
        <form class="menu-element" enctype="multipart/form-data" action="/posts/delete?id=@ViewBag.post.id" method="POST">
            <input type="submit" value="Delete post" name="delete">
        </form>
    }}
</div>