<form class="menu-element" enctype="multipart/form-data" method="POST">
    <table>
            <tbody>
                <tr class="text-input">
                    <td>
                        <img src="@ViewData["Path"]" alt="404">
                    </td>
                </tr>
                <tr class="text-input">
                    <td>
                        Tags:
                        <input type="text" name="tags" Id="tags">
                    </td>
                </tr>
                <tr>
                    <td>
                        Description
                       <input type="text" name="Description" Id="Description">
                    </td>
                </tr>
                <tr>
                    <td>
                       <input type="submit" value="Submit">
                    </td>
                </tr>
            </tbody>
        </table>
        <script>
            var tags = '@(ViewData["tags"])';
            var desc = '@(ViewData["Description"])';
            document.getElementById("tags").value = tags;
            document.getElementById("Description").value = desc;
        </script> 
</form>